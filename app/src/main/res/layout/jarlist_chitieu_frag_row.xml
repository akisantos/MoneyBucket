<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="#3D62AF"

        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/mainpage_jarlist_img"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="7dp"
            android:layout_gravity="center_vertical"
            tools:srcCompat="@drawable/hu1"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/mainpage_jarlist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:text="Tên cái hũ" />

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="right"
            android:paddingRight="10dp"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:text="Số dư khả dụng"
                android:textColor="@color/white"
                android:id="@+id/Title"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/jarBalanceText"
                android:layout_width="wrap_content"
                android:text="1000VND"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>